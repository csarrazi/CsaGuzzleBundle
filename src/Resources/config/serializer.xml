<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="csa_guzzle.serializer.adapter.jms"
            class="Csa\Bundle\GuzzleBundle\Serializer\JMSSerializerAdapter"
            public="false">
            <argument type="service" id="jms_serializer" />
        </service>

        <service id="csa_guzzle.serializer.adapter.symfony"
            class="Csa\Bundle\GuzzleBundle\Serializer\SymfonySerializerAdapter"
            public="false">
            <argument type="service" id="serializer" />
        </service>

    </services>

</container>
