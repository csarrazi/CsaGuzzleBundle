{
    "name": "csa/guzzle-bundle",
    "description": "A bundle integrating GuzzleHttp >= 4.0",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        { "name": "Charles Sarrazin", "email": "charles@sarraz.in" }
    ],
    "require": {
        "php": ">=5.5.0",
        "guzzlehttp/guzzle": "^6.1",
        "symfony/framework-bundle": "^2.6|^3.0",
        "symfony/expression-language": "^2.6|^3.0",
        "symfony/dependency-injection": "^2.6|^3.0",
        "twig/twig": "^1.12"
    },
    "conflict": {
        "guzzlehttp/guzzle-services": "*",
        "guzzlehttp/command": "*"
    },
    "suggest": {
        "doctrine/cache": "Allows caching of responses",
        "symfony/serializer": "Allow better serialization/deserialization of objects",
        "jms/serializer-bundle": "Allow better serialization/deserialization of objects (alternative)"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "doctrine/cache": "^1.1",
        "symfony/web-profiler-bundle": "^2.3",
        "symfony/phpunit-bridge": "^2.7|^3.0",
        "symfony/serializer": "^2.7|^3.0",
        "jms/serializer-bundle": "^1.0",
        "symfony/filesystem": "^2.3"
    },
    "autoload": {
        "psr-4": { "Csa\\Bundle\\GuzzleBundle\\": "src" }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
