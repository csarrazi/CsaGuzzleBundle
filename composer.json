{
    "name": "csa/guzzle-bundle",
    "description": "A bundle integrating GuzzleHttp >= 4.0",
    "license": "Apache-2.0",
    "type": "symfony-bundle",
    "authors": [
        { "name": "Charles Sarrazin", "email": "charles@sarraz.in" }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/iamluc/Tolerance"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "guzzlehttp/guzzle": "^6.1",
        "symfony/framework-bundle": "^2.7|^3.0",
        "symfony/dependency-injection": "^2.7|^3.0",
        "symfony/filesystem": "^2.7|^3.0",
        "twig/twig": "^1.12|^2.0"
    },
    "suggest": {
        "doctrine/cache": "Allows caching of responses",
        "psr/cache": "Allows caching of responses",
        "namshi/cuzzle": "Output command to repeat request in command line",
        "tolerance/tolerance": "Allows retrying failed requests"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "doctrine/cache": "^1.1",
        "psr/cache": "^1.0",
        "symfony/web-profiler-bundle": "^2.3|^3.0",
        "symfony/phpunit-bridge": "^2.7|^3.0",
        "namshi/cuzzle" : "^2.0",
        "tolerance/tolerance": "dev-guzzle-middleware"
    },
    "autoload": {
        "psr-4": { "Csa\\Bundle\\GuzzleBundle\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Csa\\Bundle\\GuzzleBundle\\Tests\\": "tests" }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "2.2.x-dev"
        }
    }
}
